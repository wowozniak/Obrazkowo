<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading"><h1>Lista pinów</h1></div>
  <div class="panel-body">

<table>
  <thead>
    <tr>
      <th>Obraz</th>
      <th>Opis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:medium) %></td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Wyświetl', pin %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edytuj', edit_pin_path(pin) %></td>
          <td><%= link_to 'Usuń', pin, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
  <div class="panel-footer"><%= link_to 'Nowy Pin', new_pin_path %></div>
</div>
